{
  "version": "2.0.0",

  "windows": {
    "options": {
      "shell": {
        "executable": "pwsh.exe",
        "args": [
          "-NoProfile",
          "-ExecutionPolicy",
          "Bypass",
          "-Command"
        ]
      }
    }
  },
  "linux": {
    "options": {
      "shell": {
        "executable": "/usr/bin/pwsh",
        "args": [
          "-NoProfile",
          "-Command"
        ]
      }
    }
  },
  "osx": {
    "options": {
      "shell": {
        "executable": "/usr/local/bin/pwsh",
        "args": [
          "-NoProfile",
          "-Command"
        ]
      }
    }
  },

  "tasks": [
    {
      "label": "Build Module",
      "type": "shell",
      "command": "Invoke-Build -Task Build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": [ ]
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "Invoke-Build -Task Test",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": [ ]
    },
    {
      "label": "Clean Build",
      "type": "shell",
      "command": "Invoke-Build -Task Clean",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": [ ]
    },
    {
      "label": "dotnet build",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/PSBinaryModule.sln",
        "--configuration",
        "Debug"
      ],
      "group": "build",
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "dotnet test",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "test",
        "${workspaceFolder}/PSBinaryModule.sln",
        "--configuration",
        "Debug",
        "--logger",
        "\"console;verbosity=detailed\""
      ],
      "group": "test",
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "dotnet clean",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "clean",
        "${workspaceFolder}/PSBinaryModule.sln"
      ],
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": "$msCompile"
    },
    {
      "label": "dotnet restore",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "restore",
        "${workspaceFolder}/PSBinaryModule.sln"
      ],
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": [ ]
    }
  ]
}
